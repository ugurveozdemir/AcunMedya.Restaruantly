@model AcunMedya.Restaruantly.Entities.Special

@{
    ViewBag.Title = "UpdateSpecial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Spesiyel Düzenle</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Spesiyel Düzenle</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(m => m.SpecialId)
                            <label>İsim</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", value = Model.Title })
                            <br />
                            <label>Kısa Açıklama</label>
                            @Html.TextBoxFor(x => x.ShortDescription, new { @class = "form-control", value = Model.ShortDescription })
                            <br />
                            <label>Uzun Açıklama</label>
                            @Html.TextAreaFor(x => x.LongDescription, new { @class = "form-control", value = Model.LongDescription })
                            <br />
                            <label>Image Url</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", value = Model.ImageUrl })
                            <br />
                            

                        </div>

                        <button type="submit" class="btn btn-dark">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





