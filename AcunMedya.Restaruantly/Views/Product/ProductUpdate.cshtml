@model AcunMedya.Restaruantly.Entities.Product
@{
    ViewBag.Title = "ProductUpdate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Add Menu</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ürün Düzenle</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(m => m.ProductId)
                            <label>İsim</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", value = Model.Name })
                            <br />
                            <label>Fiyat</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            <br />
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                            <br />
                            <label>Image Url</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                            <label>Kategori İsmi</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })

                        </div>

                        <button type="submit" class="btn btn-dark">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




