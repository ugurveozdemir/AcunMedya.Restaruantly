@model AcunMedya.Restaruantly.Entities.Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Admin Profile</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Menu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(m => m.AdminId)
                            <label>Username</label>
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                            <br />
                            <label>Password</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                            <br />
                            <label>Name</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            <br />
                            <label>Surname</label>
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                            <br />
                            <label>Image Url</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                            <label>
                                Email
                            </label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>






