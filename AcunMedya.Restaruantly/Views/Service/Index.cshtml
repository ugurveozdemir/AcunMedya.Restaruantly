@model List<AcunMedya.Restaruantly.Entities.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Menu</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Ürün Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <div class="mb-2">
                            <a href="/Product/ProductCreate" class = "btn btn-success mb-2">New</a>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İsim</th>
                                    <th>Açıklama</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>

                                        <th> @count </th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Service/ServiceUpdate/@item.ServiceId" class="btn btn-primary"><i class="fa fa-edit color-muted m-r-5"></i> Update</a> </td>
                                        <td>
                                            <a href="/Service/ServiceDelete/@item.ServiceId" class="btn btn-danger">
                                                <i class="fa fa-close color-muted m-r-5"></i>
                                                Delete
                                            </a>
                                        </td>

                                    </tr>
                                }


                            </tbody>


                        </table>

                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>


