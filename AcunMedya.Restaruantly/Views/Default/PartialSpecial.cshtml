@model List<AcunMedya.Restaruantly.Entities.Special>
@{ int Tcounter = 1;
   int Dcounter = 1;
   string active_show = "active show";
    }
<section id="specials" class="specials">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Özel Tatlar</h2>
            <p>Özel Tatlarımızı İnceleyin</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    @foreach (var item in Model.Where(x => x.SpecialId == 1))
                    {
                        <li class="nav-item">
                            <a class="nav-link @active_show" data-bs-toggle="tab" href="#tab-@Tcounter">@item.Title</a>
                        </li>
                        Tcounter = Tcounter + 1;
                    }
                    @foreach (var item in Model.Skip(1))
                    {
                        <li class="nav-item">
                            <a class="nav-link " data-bs-toggle="tab" href="#tab-@Tcounter">@item.Title</a>
                        </li>

                        if (Tcounter < Model.Count())
                        {
                            Tcounter = Tcounter + 1;
                        }
                       

                    }
                </ul>
            </div>
            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                    @foreach (var item in Model.Where(x => x.SpecialId == 1))
                    {
                        <div class="tab-pane @active_show" id="tab-@Dcounter">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@item.Title</h3>
                                    <p class="fst-italic">@item.ShortDescription</p>
                                    <p>@item.LongDescription</p>
                                </div>
                                <div class="col-lg-4 text-center order-1 order-lg-2">
                                    <img src="@Url.Content(item.ImageUrl)" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        Dcounter = Dcounter + 1;
                    }
                    @foreach (var item in Model.Skip(1))
                    {
                        <div class="tab-pane" id="tab-@Dcounter">
                            <div class="row">
                                <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@item.Title</h3>
                                    <p class="fst-italic">@item.ShortDescription</p>
                                    <p>@item.LongDescription</p>
                                </div>
                                <div class="col-lg-4 text-center order-1 order-lg-2">
                                    <img src="@Url.Content(item.ImageUrl)" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        if (Dcounter < Model.Count())
                        {
                            Dcounter = Dcounter + 1;
                        }
                    }



                </div>
            </div>
        </div>

    </div>
</section>
