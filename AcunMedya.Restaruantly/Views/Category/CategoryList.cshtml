@model List<AcunMedya.Restaruantly.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Category List</h4>
                    </div>
                    <div class="table-responsive">
                        <div class="mb-2">
                            <a href="/Category/CategoryCreate" class="btn btn-success mb-2">New</a>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Category Name</th>
                                    <th>Update</th>
                                    <th>Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.CategoryId</th>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Category/CategoryUpdate/@item.CategoryId" class="btn btn-primary">Update</a> </td>
                                        <td><a href="/Category/CategoryDelete/@item.CategoryId" class="btn btn-danger">Delete</a> </td>

                                    </tr>
                                }


                            </tbody>


                        </table>

                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>

