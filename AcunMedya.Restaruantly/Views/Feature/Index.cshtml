@model AcunMedya.Restaruantly.Entities.Feature
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}





<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Feature</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Özellik Kısmı</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            @Html.HiddenFor(m => m.FeatureId)
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Alt Başlık</label>
                            @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
                            <br />
                            <label>Video Url</label>
                            @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control" })
                            <br />
                            <label>Resim Url</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })

                        </div>

                        <button type="submit" class="btn btn-dark">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>











