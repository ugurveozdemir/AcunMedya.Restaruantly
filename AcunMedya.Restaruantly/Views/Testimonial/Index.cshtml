@model List<AcunMedya.Restaruantly.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Testimoniyal</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Testimoniyal Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <div class="mb-2">
                            <a href="/Testimonial/CreateTestimonial" class="btn btn-success mb-2">New</a>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>İsim</th>
                                    <th>Ünvan</th>
                                    <th>Açıklama</th>
                                    <th>Image Url</th>
                                    <th>Kategori</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                   
                                    <tr>

           
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><img src="@Url.Content(item.ImageUrl)" style="width:100px;height:100px;"></td>
                                       
                                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-primary"><i class="fa fa-edit color-muted m-r-5"></i> Update</a> </td>
                                        <td>
                                            <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId"  class="btn btn-danger">
                                                <i class="fa fa-close color-muted m-r-5"></i>
                                                Delete
                                            </a>
                                        </td>

                                    </tr>
                                }


                            </tbody>


                        </table>

                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>




