
@model List<AcunMedya.Restaruantly.Entities.Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Etkinlikler</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Etkinlik Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <div class="mb-2">
                            <a href="/Chef/CreateChef" class="btn btn-success mb-2">New</a>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Etkinlik İsmi</th>
                                    <th>Açıklama</th>
                                    <th>Açıklama 2</th>
                                    <th>Ücret</th>
                                    <th>Resim</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.Title.</th>
                                        <td>@item.Description</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Price</td>
                                        <td><img src="@Url.Content(item.ImageUrl)" style="width:100px;height:100px;"></td>
                                        <td><a href="/Event/UpdateEvent/@item.EventId" class="btn btn-primary">Update</a> </td>
                                        <td><a href="/Event/DeleteEvent/@item.EventId" class="btn btn-danger">Delete</a> </td>

                                    </tr>
                                }


                            </tbody>


                        </table>

                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->

    </div>
</div>





