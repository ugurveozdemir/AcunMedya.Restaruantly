@model AcunMedya.Restaruantly.Entities.Event
@{
    ViewBag.Title = "UpdateEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Kategori Update</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Şefi Düzenle</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">

                            <input type="hidden" name="EventId" value="@Model.EventId " />
                            <br />
                            <label>Etkinlik</label>

                            <input type="text" class="form-control" name="Title" value="@Model.Title" placeholder="Type a Chef name">
                            <br />
                            <label>Açıklama</label>
                            <input type="text" class="form-control" name="Description" value="@Model.Description" placeholder="Type a Chef title">
                            <br />
                            <label>Açıklama 2</label>
                            <input type="text" class="form-control" name="Description2" value="@Model.Description2" placeholder="Type a Chef Image">
                            <br />
                            <label>Fiyat</label>
                            <input type="text" class="form-control" name="Price" value="@Model.Price" placeholder="Type a Chef Image">
                            <br />
                            <label>Resim Url</label>
                            <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl" placeholder="Type a Chef Image">
                        </div>

                        <button type="submit" class="btn btn-dark">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





