@model List<AcunMedya.Restaruantly.Entities.Reservation>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Description</th>
                                    <th>Time</th>

                                    <th>Status</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <span>@item.Phone</span>
                                        </td>
                                        <td>@item.Description</td>
                                        <td>@item.Time</td>


                                        @if (item.ReservationStatus == "Beklemede")
                                        {
                                            <td><i class="fa fa-circle-o text-info"></i> Beklemede
                                            <a href="/Dashboard/OKStatus/@item.ReservationId" class="btn btn-success mr-2 ml-3"><i class="fa fa-edit color-muted m-r-1"></i> Onayla</a>
                                            <a href="/Dashboard/NOStatus/@item.ReservationId" class="btn btn-danger mr-2 ml-3"><i class="fa fa-edit color-muted m-r-1"></i> İptal Et</a> 
                                            </td>
                                        }
                                        @if (item.ReservationStatus == "Onaylandı")
                                        {
                                            <td>
                                                <i class="fa fa-circle-o text-success  mr-2"></i> Onaylandı
                                                <a href="/Dashboard/NOStatus/@item.ReservationId" class="btn btn-info ml-3"><i class="fa fa-edit color-muted m-r-1"></i> İptal Et</a>
                                            </td>

                                        }
                                        @if (item.ReservationStatus == "İptal Edildi")
                                        {
                                            <td><i class="fa fa-circle-o text-danger  mr-2"></i> İptal Edildi</td>
                                        }





                                        <td>
                                            <span>Last Login</span>
                                            <span class="m-0 pl-3">10 sec ago</span>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
